#include <iostream>
#include <string> 
#include<cstdio>


struct STUDENT
{
    std::string NAME;
    unsigned GROUP;
    float SES[5]{};
};

int main()
{
    setlocale(0, "rus");
    int i;
    int j;
    int const students = 6;
    STUDENT stud1[students]{};
    int scount=0;
    for (i = 0; i < students; i++)
    {
        std::cout << "ФИО студента:" << std::endl;
        //std::cin.ignore();
        std::cin >> stud1[scount].NAME;// getline(std::cin, stud1[i].NAME);
        std::cout << "Введите номер группы:" << std::endl;
        std::cin >> stud1[scount].GROUP;
        std::cout << "оценки студента:";
        for (j = 0; j < 5; j++)
        {
            std::cin >> stud1[scount].SES[j];
        }
        scount++;
    }
    float sum = 0;
for(i=0;i<students;i++)
{
    for(j=0;j<5;j++){
       sum += stud1[i].SES[j];
        
        if(sum/5>4){
            std::cout << stud1[i].NAME;
            std::cout << stud1[i].GROUP;
        }
        else
            std::cout<<"not found"<<std::endl;
            
        
    }
    
}



    system("Pause");

    return 0;
}
